---
const { dates, title, company, technology, description } = Astro.props;
import Tag from "./Tag.astro";
---

<div class="opp-container">
  <p class="date">{dates}</p>
  <div class="opp-info">
    <h6>{company} - {title}</h6>
    <p>{description}</p>
    <div class="tags">
      {technology?.length > 0 &&
        technology.map((tech: any) => (
          <Tag label={tech} />
        ))
      }
    </div>
  </div>
</div>

<style>
.opp-container {
  display: flex;
}

.opp-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.date {
  flex: 1;
}

.tags {
  display: flex;
  gap: 1rem;
}

p, h6 {
  margin: 0px;
}
</style>


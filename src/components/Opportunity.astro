---
const { dates, title, company, technology, description } = Astro.props; 
import Tag from "./Tag.astro";
---

<div class="opp-container">
  <p class="date">{dates}</p>
  <div class="opp-info">
    <h6>{company} - {title}</h6>
      <!--<p>{dates}</p>-->
    <p>{description}</p>
    <div class="tags">
      {technology.length > 0 
      ? technology.map((tech: any) => <Tag label={tech} />)
      : <Tag label="N/A" />}
    </div>

  </div>


</div>

<style>
.opp-container {
/*background-color: red;*/
display: flex;
}

.opp-info {
/*background-color: blue;*/
flex: 3;
display: flex;
flex-direction: column;
gap: 1rem;
}

.date {
flex: 1;
}

.tags {
display: flex;
gap: 1rem;
}

p, h6{
/*background-color: red;*/
margin: 0px;
}
</style>



---
import Opportunity from "./Opportunity.astro"
import { opportunities } from "../data/opportunities.ts"
---

<div class="exp-container">
  <h1>EXPERIENCE</h1>
  {opportunities.map((opportunity) => (
  <Opportunity title={opportunity.title} company={opportunity.company} dates={opportunity.dates} description={opportunity.description} technology={opportunity.technology}/>
    ))}
</div>

<style>
.exp-container {
display: flex;
flex-direction: column;
gap: 1rem;
width: 80%;
}
.opps {
gap: 4rem;
}
</style>

